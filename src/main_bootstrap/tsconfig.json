{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "dom.iterable",
      "scripthost"
    ],
    "allowJs": false,
    "newLine": "LF",
    "jsx": "react",
    "jsxFactory": "JSX.createElement",
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "paths": {
      "*": [
        "../graph_core/ts/*",
        "../graph_store/ts/*",
        "../main_commons/ts/*",
        "../ui_core/ts/manager/*",
        "../ui_core/ts/widgets/*"
      ],
      "svg.js" : [
        "node_modules/svg.js"
      ],
      "electron" : [
        "node_modules/electron"
      ]
    }
  },
  "include":[
    "../"
  ]
}